<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skyblue"
    tools:context=".RationMatch" >
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
	    <LinearLayout android:id="@+id/welcome_layout"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:paddingTop="@dimen/activity_vertical_margin"
	        android:background="@color/white">
	        <TextView android:text="@string/hello_soldier"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:paddingLeft="@dimen/activity_horizontal_margin"
	            android:paddingRight="@dimen/activity_horizontal_margin"
	            android:paddingBottom="20dp"
	            android:textStyle="bold|italic"
	            android:textSize="18sp"
	            />
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="4dp"
	            android:background="@drawable/separator"
	            /> 
	    </LinearLayout>
	    <LinearLayout android:id="@+id/overview_layout"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:paddingTop="@dimen/activity_vertical_margin"
	        android:background="@color/white"
	        >
	        <TextView android:text="Overview"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:paddingLeft="@dimen/activity_horizontal_margin"
	            android:paddingBottom="4sp"
	            android:textSize="18sp"
	            android:textStyle="bold"
	            />
	        <LinearLayout android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:paddingLeft="@dimen/activity_horizontal_margin"
	            android:paddingRight="@dimen/activity_horizontal_margin"
	            android:background="@color/white"
	            android:orientation="horizontal">
	            <TextView android:text="Total Daily Calories"
	                android:layout_width="wrap_content"
	                android:textStyle="bold"
	                android:layout_height="wrap_content" />
	            <LinearLayout android:gravity="right"
	                android:layout_height="wrap_content"
	                android:layout_width="fill_parent"
	                android:paddingBottom="4dp"
	                android:textSize="11sp">
		            <TextView android:id="@+id/overview_calories"
		                android:text="2386"
		                android:layout_height="wrap_content"
		                android:textColor="@color/gray"
		                android:textStyle="italic"
		                android:layout_width="wrap_content" />
		            <TextView android:text=" cal "
		                android:gravity="right"
		                android:layout_width="wrap_content"
		                android:textColor="@color/gray"
		                android:textStyle="italic"
		                android:layout_height="wrap_content"/>
	            </LinearLayout>
	        </LinearLayout>
	        <LinearLayout android:layout_width="fill_parent"
	            android:layout_height="8dp"
	            android:paddingLeft="@dimen/activity_horizontal_margin"
	            android:paddingRight="@dimen/activity_horizontal_margin"
	            android:background="@color/white"
	            android:orientation="horizontal"
	            >
	            <LinearLayout android:id="@+id/carbohydrate_overview"
	                android:layout_width="0px"
	                android:layout_height="match_parent"
	                android:background="@color/green"
	                android:layout_weight="55" />
	            <LinearLayout android:id="@+id/protein_overview"
	                android:layout_width="0px"
	                android:layout_height="match_parent"
	                android:background="@color/red"
	                android:layout_weight="30" />
	            <LinearLayout android:id="@+id/fat_overview"
	                android:layout_width="0px"
	                android:layout_height="match_parent"
	                android:background="@color/brown"
	                android:layout_weight="15" />
	        </LinearLayout>
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="20dp"
	            android:background="@color/white">
	        </LinearLayout>
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="4dp"
	            android:background="@drawable/separator">
	        </LinearLayout>
	    </LinearLayout>
	    <LinearLayout android:id="@+id/lets_eat_entry"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/white"
            android:paddingTop="@dimen/activity_vertical_margin"
	        android:orientation="vertical">
	        <LinearLayout android:orientation="horizontal"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
	            android:paddingBottom="20dp">
		        <TextView android:text="Let's Eat"
		            android:textSize="18sp"
		            android:textStyle="bold"
		            android:gravity="center_vertical"
		            android:layout_width="wrap_content"
		            android:layout_height="fill_parent"
		            />
		        <TextView android:text=">"
		            android:textSize="24sp"
		            android:textStyle="bold"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:gravity="right"
		            />
	        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@drawable/separator">
            </LinearLayout>
	    </LinearLayout>
    </LinearLayout>
</ScrollView>
